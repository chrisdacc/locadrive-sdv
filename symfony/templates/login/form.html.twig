{% extends 'base.html.twig' %}

{% block main %}
<form method="POST">
    <input type="text" name="_username" placeholder="Username" value="{{ last_username }}" required>
    <input type="password" name="_password" placeholder="Password" required>
    {% if error %}
        <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <button type="submit">Login</button>
    <button onclick="window.location.href='{{ path('register') }}'">Register</button>
</form>

{% endblock %}

